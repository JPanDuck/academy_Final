<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ac.kr.academy.mapper.auth.RefreshTokenMapper">
    <resultMap id="refreshMap" type="com.ac.kr.academy.domain.auth.RefreshToken">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="token" column="token" />
        <result property="expiryDate" column="expiry_date" />
    </resultMap>

    <!-- 저장 -->
    <insert id="save" parameterType="com.ac.kr.academy.domain.auth.RefreshToken">
        <selectKey keyProperty="id" order="BEFORE" resultType="long">
            SELECT refresh_tokens_seq.NEXTVAL FROM dual
        </selectKey>
        INSERT INTO refresh_tokens (id, user_id, token, expiry_date)
        VALUES (#{id}, #{userId}, #{token}, #{expiryDate})
    </insert>

    <!-- 토큰으로 조회 -->
    <select id="findByToken" parameterType="string" resultMap="refreshMap">
        SELECT * FROM refresh_tokens
        WHERE token = #{token}
    </select>

    <!-- userId로 삭제 -->
    <delete id="deleteByUserId" parameterType="long">
        DELETE FROM refresh_tokens
        WHERE user_id = #{userId}
    </delete>
</mapper>